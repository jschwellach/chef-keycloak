/interface=management/:remove
<%- if node['wildfly']['int']['mgmt']['bind'] == '0.0.0.0' %>
/interface=management/:add(any-address)
<%- else %>
/interface=management/:add(inet-address="${jboss.bind.address.management:<%= node['wildfly']['int']['pub']['bind'] %>}")
<%- end %>

/interface=public/:remove
